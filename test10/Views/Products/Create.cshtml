@model test10.Models.products;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h2 class="text-info">Enter New Product </h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border col-md-6">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row col-2">
            <label asp-for="Name" class="text-dark"></label>
        </div>
        <div class=" col-5">
            <input asp-for="Name" class="form-control" />
        </div>
        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row col-2">
            <label asp-for="price" class="text-dark"></label>
        </div>
        <div class=" col-5">
            <input asp-for="price" class="form-control" />
        </div>
        <div>
            <span asp-validation-for="price" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row col-2">
            <label asp-for="Quantity" class="text-dark"></label>
        </div>
        <div class=" col-5">
            <input asp-for="Quantity" class="form-control" />
        </div>
        <div>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row col-2">
            <label asp-for="Image" class="text-dark"></label>
        </div>
        <div class=" col-5">
            <input asp-for="Image" type="file" class="form-control" />
        </div>
        <div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row col-2">
            <label asp-for="ProductColor" class="text-dark"></label>
        </div>
        <div class=" col-5">
            <input asp-for="ProductColor" class="form-control" />
        </div>
        <div>
            <span asp-validation-for="ProductColor" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row col-2">
            <label asp-for="producttypeId" class="text-dark"></label>
        </div>
        <div class=" col-5">
            <select asp-for="producttypeId" asp-items="@ViewBag.prodtypeid" class="form-control"></select>
            @*<input asp-for="producttypeId" class="form-control" />*@
        </div>
        <div>
            <span asp-validation-for="producttypeId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row col-2">
            <label asp-for="SpecialTagId" class="text-dark"></label>
        </div>
        <div class=" col-5">
            <select asp-for="SpecialTagId" asp-items="@ViewBag.SpecialTagid" class="form-control"></select>
            @*<input asp-for="SpecialTagId" class="form-control" />*@
        </div>
        <div>
            <span asp-validation-for="SpecialTagId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row col-2">
            <label asp-for="IsAvailable" class="text-dark"></label>
        </div>
        <div class=" col-5">
            <input asp-for="IsAvailable" type="checkbox" />
        </div>
        <div>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="save" />
            <a asp-action="Index" class="btn btn-primary">Back to product list</a>
        </div>
    </div>
</form>


@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}