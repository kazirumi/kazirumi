@model test10.Models.products
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete product</h1>


<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="rounded border row col-sm-12">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-sm-4">
            <input asp-for="Id" type="hidden" />
            <div class="form-group row ">
                <div class="col-4">
                    <label asp-for="Name" class="text-dark"></label>
                </div>
                <div class=" col-8">
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                </div>
                <div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="price" class="text-dark"></label>
                </div>
                <div class=" col-8">
                    <input asp-for="price" readonly="readonly" class="form-control" />
                </div>
                <div>
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class=" col-4">
                    <label asp-for="Quantity" class="text-dark"></label>
                </div>
                <div class=" col-8">
                    <input asp-for="Quantity" readonly="readonly" class="form-control" />
                </div>
                <div>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Image" class="text-dark"></label>
                </div>
                <div class=" col-8">
                    <input asp-for="Image" type="file" readonly="readonly" class="form-control" />
                </div>
                <div>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductColor" class="text-dark"></label>
                </div>
                <div class=" col-8">
                    <input asp-for="ProductColor" readonly="readonly" class="form-control" />
                </div>
                <div>
                    <span asp-validation-for="ProductColor" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="producttypeId" class="text-dark"></label>
                </div>
                <div class=" col-8">
                    @*<select asp-for="producttypeId"  readonly="readonly" asp-items="@ViewBag.producttypeid" class="form-control"></select>*@
                    <input asp-for="producttypeId" readonly="readonly" type="hidden"class="form-control" />
                    <input value="@Model.producttype.prodtype" readonly="readonly"  class="form-control" />
                </div>
                <div>
                    <span asp-validation-for="producttypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SpecialTagId" class="text-dark"></label>
                </div>
                <div class=" col-8">
                    @*<select asp-for="SpecialTagId"  asp-items="@ViewBag.Specialtagid" class="form-control"></select>*@
                    <input  asp-for="SpecialTagId" readonly="readonly" type="hidden" class="form-control" />
                    <input value="@Model.SpecialTag.SpecialTagname" readonly="readonly" class="form-control" />
                </div>
                <div>
                    <span asp-validation-for="SpecialTagId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsAvailable" class="text-dark"></label>
                </div>
                <div class=" col-8">
                    <input asp-for="IsAvailable" readonly="readonly" type="checkbox" />
                </div>
                <div>
                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <button class="btn btn-danger" type="submit"> delete Product</button>
                <a asp-action="Index" class="btn btn-primary">Back to product list</a>
            </div>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-7">
            <img src="~/@Model.Image" width="100%" />
        </div><br />
    </div>


</form>
<br />

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}

}