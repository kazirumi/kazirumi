@using test10.Models;
@model IEnumerable<producttype>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Products Types</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info ">&nbsp; new product Types</a>

    </div>

</div>
<div>
    <table class="table table-striped border" id="myTable">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c => c.prodtype)
            <th>
            </th>
            <th>
            </th>

        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.prodtype</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-controller="" class="btn btn-primary" asp-route-id="@Model"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-controller="" class="btn btn-success" asp-route-id="@Model"><i class="fas fa-list"></i></a>
                            <a asp-action="Delete" asp-controller="" class="btn btn-danger" asp-route-id="@Model"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
<script type="text/javascript">
      $(document).ready( function () {
           $('#myTable').DataTable();
        } );
    $(function () {
        var save = '@TempData["save"]'
        if (save != '') {
            alertify.success(save);
        }
        var edit = '@TempData["edit"]'
        var delet='@TempData["delete"]'
        if (edit != '') {
            alertify.warning(edit);
        }
        if (delet != '') {

            alertify.error(delet);
        }

    })
</script>
}