@model test10.Models.producttype;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h2 class="text-info">Enter New Product Types</h2>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
            
        </div>
        <div class="form-group row col-2">
            <label asp-for="prodtype"></label>
        </div>
        <div class=" col-5">
            <input asp-for="prodtype" class="form-control"/>
        </div>
        <div>
